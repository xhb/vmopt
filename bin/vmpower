#!/usr/bin/env ruby
#encoding: utf-8
require "vmopt/power_operation"
require "optparse"

option = {}
option_parser = OptionParser.new do | opts |
  opts.banner = %q/
  Help: 
    Description:
      vmpower tool, use for system power management.
    function:
      1.shutdown        
      2.reboot
      3.logoff
      4.lock_user
      5.sleep

    Example:
      vmpower --do  shutdown    
      vmpower --do  reboot  
      vmpower --do  logoff
      vmpower --do  lock_user
      vmpower --do  sleep
  /
  opts.on('-d popt', '--do  popt', 'System  power operation') do |value|
    option[:popt] = value
    option[:cmd] = "do"
  end

end.parse!
  
  $pow = Vmopt::PowerOperation.new()

   if option[:cmd] == "do"
      if option[:popt] == "shutdown"
        $pow.shutdown
      elsif option[:popt] == "reboot"
        $pow.reboot
      elsif option[:popt] == "logoff"
        $pow.logoff
      elsif option[:popt] == "lock_user"
        $pow.lock_user
      elsif option[:popt] == "sleep"
      	$pow.sleep
      else 
        puts "Please check the params..."
      end
   else
   	  system("vmpower -help");
   end
